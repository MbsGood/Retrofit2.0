<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
    <!-- 填充颜色 -->
    <solid android:color="@android:color/white" />
    <!-- 线的宽度，颜色灰色 -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" />

    <padding
        android:bottom="10dp"
        android:left="5dp"
        android:right="5dp"
        android:top="10dp" />
    <!-- 矩形的圆角半径 -->
    <corners android:radius="3dp" />
</shape>